{
  "name": "note-vault",
  "productName": "Note Vault",
  "version": "1.0.1",
  "description": "A secure, offline-first technical inspection note app.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "note",
    "inspection",
    "offline",
    "electron"
  ],
  "author": "Jason Sparks",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.notevault.app",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!package-lock.json"
    ]
  }
}